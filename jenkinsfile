pipeline {
    agent any

    environment {
        AWS_REGION = 'ap-south-1'
        ANSIBLE_DIR = 'ansible'
    }

    stages {

        stage('Checkout Code') {
            steps {
                echo "üì¶ Checking out source code..."
                git branch: 'main',
                    url: 'https://github.com/Shaik-DevOpsLucky/My-Portfolio-WebDeploy-Automation.git',
                    credentialsId: 'github-pat'
            }
        }

        stage('Terraform Init') {
            steps {
                echo "üöÄ Terraform Init"
                withAWS(credentials: 'aws_id', region: "${AWS_REGION}") {
                    sh 'terraform init -input=false'
                }
            }
        }

        stage('Terraform Validate') {
            steps {
                echo "‚úÖ Terraform Validate"
                sh 'terraform validate'
            }
        }

        stage('Terraform Plan') {
            steps {
                echo "üìÑ Terraform Plan"
                withAWS(credentials: 'aws_id', region: "${AWS_REGION}") {
                    sh 'terraform plan -out=tfplan'
                }
            }
        }

        stage('Terraform Apply') {
            steps {
                echo "üöÄ Terraform Apply"
                withAWS(credentials: 'aws_id', region: "${AWS_REGION}") {
                    sh 'terraform apply -auto-approve tfplan'
                }
            }
        }

        stage('Generate Ansible Inventory') {
            steps {
                echo "üìù Creating dynamic Ansible inventory..."
                script {
                    def publicIp = sh(
                        script: 'terraform output -raw public_ip',
                        returnStdout: true
                    ).trim()

                    sh """
                    mkdir -p ${ANSIBLE_DIR}
                    echo "[web]" > ${ANSIBLE_DIR}/inventory
                    echo "${publicIp} ansible_user=ubuntu" >> ${ANSIBLE_DIR}/inventory
                       """
                }
            }
        }

        stage('Ansible Ping Test') {
            steps {
                sshagent(credentials: ['jenkins-ec2-key']) {
                    sh '''
                    ANSIBLE_HOST_KEY_CHECKING=False ansible -i ansible/inventory web -m ping
                    '''
                }
            }
        }

        stage('Run Ansible Playbook') {
            steps {
                echo "‚öôÔ∏è Running Ansible Playbook..."
                sshagent(credentials: ['jenkins-ec2-key']) {
                    sh '''
                ANSIBLE_HOST_KEY_CHECKING=False ansible-playbook -i ansible/inventory ansible/playbook.yaml
 
                    '''
                }
            }
        }

        
    }

    post {
        success {
            echo "‚úÖ Pipeline executed successfully!"
        }
        failure {
            echo "‚ùå Pipeline failed. Check logs."
        }
    }
}
